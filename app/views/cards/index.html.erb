  <!-- Page Content -->
  <div class="container main">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">Send a Card</h1>
        <%# ユーザー選択するフォーム %>
          <div class="form-wrapper">
           <%=form_with model: @room, local: true do |f|%>
              
            <select class="form-control",name="room[user_ids][]">
              <option value="">送る相手を選んでください</option>
              <% User.where.not(id: current_user.id).each do |user|%>
              <option value=<%= user.id%>><%= user.nickname%></option>
              <% end %>
            </select>
            <input name="room[user_ids][]" type="hidden" value=<%= current_user.id%>>

            <%= f.text_field :name, placeholder: 'あだ名で書いてみよう！！',value: current_user.nickname,type: "hidden" %>
            <%= f.submit value="カード作成ページへ",class: "btn btn-info w-70 mt-2 mb-4 " %>
          <% end %>
          </div>
        <%# ユーザー名と詳細ページへの遷移、ランダムに３人%>
        <div class="list-group">
          <% @users.where.not(id: current_user.id).shuffle.first(3).each do |user| %>
          <%= link_to user_path(user) do%>
          <div class="list-group-item ">
          <%= user.nickname%>
          </div>
          <% end %>
          <% end %>
        </div>

      </div>
      <!-- /.col-lg-3 -->

      <%# メインラッパー %>
      <div class="col-lg-9">

        <%# 会社の取組・良例共有スペース %>
        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <%# ありがとうカードの表示 %>
        <div class="row">
          <% @cards.shuffle.first(6).each do |card|%>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="#">To:<%= card.receive_user.nickname%></a>
                  </h4>
                  <p class="card-text"><%= card.content%></p>
                  <h5>From:<%= card.send_user.nickname%></h5>
                </div>
                <div class="card-footer">
                  <small class="text-muted">&#9733;ほっこり</small>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; arigatou products</p>
    </div>
    <!-- /.container -->
  </footer>






