<h1>Page for ThanksCards</h1>
<p>Take it easy</p>
   <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, user_path(current_user), class: "user-nickname"%></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"%> </li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録',new_user_registration_path , class: "sign-up" %></li>
      <% end %>

  <% @users.each do |user| %>
    <%= link_to user_path(user) do%>
      <%= user.nickname%>
    <% end %>
  <% end %>

  <%# ユーザー選択するフォーム %>
  <%=form_with model: @room, local: true do |f|%>
      
    <select name="room[user_ids][]">
      <option value="">ありがとうカードを贈ろう</option>
      <% User.where.not(id: current_user.id).each do |user|%>
      <option value=<%= user.id%>><%= user.nickname%></option>
      <% end %>
    </select>
    <input name="room[user_ids][]" type="hidden" value=<%= current_user.id%>>

    <%= f.text_field :name, placeholder: 'あだ名で書いてみよう！！',value: current_user.nickname,type: "hidden"%>
    <%= f.submit value="THANKS" %>
  <% end %>